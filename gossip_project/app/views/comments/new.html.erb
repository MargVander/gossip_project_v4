<% if flash[:notice] %>
  <div class="alert alert-dismissible alert-danger">
    <div class="notice"><strong><%= flash[:notice] %></strong>
     Please try again</div>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>


<h1 class="font-weight-light" align="center">Ajouter un commentaire</h1>

<div class="container col-md-8 order-md-1">
  <%= form_tag url_for(action: 'create'), method: "post" do %>


     <div class="form-group">
           <%= label_tag 'Content' %>
           <%= text_field_tag 'content', @content, class: "form-control "  %>
     </div>

     <div class="form-group">
           <%= submit_tag "Add comment", class: 'btn btn-secondary btn-lg btn-submit' %>
     </div>

     <% end %>
     </div>
